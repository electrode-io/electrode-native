  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "before",
      "after",
      "log"
    ],
    "ignore": [
      "**/dist",
      "**/ern-api-gen/",
      "**/flow-typed/",
      "**/test"
